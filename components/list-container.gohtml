{{ $collapseAfterRows := .Options.IntOr "collapse-after-rows" 5 }}

{{- if $items | len | eq 0 -}}
  <div class="widget-content ">
    <p>Empty</p>
  </div>
{{- else -}}
  <div class="x-container x-content-padding">
    <div
      class="x-grid x-collapsible"
      data-collapse-after-rows="{{ $collapseAfterRows }}"
    >
      {{- range $item := $items -}}
        {{- if or (eq ($item.String "title") "") (not ($item.Exists "title")) -}}
          {{ continue }}
        {{- end -}}

        {{ template "ListItem" $item }}
      {{- end -}}
    </div>
  </div>
{{- end -}}
